@page
@model BookListRazor.Pages.BookList.CreateModel

<div class="container p-0 m-0">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title mb-3">Create new book</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row align-items-center">
                    <div class="col-3">
                        <label asp-for="Book.Name"></label>
                    </div>
                    <div class="col-6">
                        <input class="form-control" asp-for="Book.Name" />
                        <span class="text-danger" asp-validation-for="Book.Name"></span>
                    </div>
                </div>
                <div class="form-group row align-items-center">
                    <div class="col-3">
                        <label asp-for="Book.Author"></label>
                    </div>
                    <div class="col-6">
                        <input class="form-control" asp-for="Book.Author" />
                        <span class="text-danger" asp-validation-for="Book.Author"></span>
                    </div>
                </div>
                <div class="form-group row align-items-center">
                    <div class="col-3">
                        <label asp-for="Book.ISBN"></label>
                    </div>
                    <div class="col-6">
                        <input class="form-control" asp-for="Book.ISBN" />
                        <span class="text-danger" asp-validation-for="Book.ISBN"></span>
                    </div>
                </div>
                <div class="form-group row align-items-center">
                    <div class="col-3">
                        <label asp-for="Book.Description"></label>
                    </div>
                    <div class="col-6">
                        <textarea class="form-control" asp-for="Book.Description"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3 offset-3">
                        <input class="btn btn-success form-control text-white" type="submit" value="Create">
                    </div>
                    <div class="col-3">
                        <a asp-page="Index" class="btn btn-primary form-control">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <partial-name ="_ValidationScriptsPartial"/>
}
